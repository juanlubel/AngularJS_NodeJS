{
  "host": "0.0.0.0:3000",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "produces": [
    "application/json"
  ],
  "consumes": [
    "application/json"
  ],
  "swagger": "2.0",
  "info": {
    "version": "v1.0",
    "title": "Items Server"
  },
  "securityDefinitions": {
    "Token": {
      "description": "For accessing the protected API resources, you must have received a a valid JWT token after registering or logging in. This JWT token must then be used for all protected resources by passing it in via the 'Authorization' header.\n\nA JWT token is generated by the API by either registering via /users or logging in via /users/login.\n\nThe following format must be in the 'Authorization' header :\n\n    Token: xxxxxx.yyyyyyy.zzzzzz\n    \n",
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "paths": {
    "/items": {
      "get": {
        "summary": "Show All Items",
        "description": "Show All Items",
        "tags": [
          "Items"
        ],
        "operationId": "ShowAllItems",
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/item"
            }
          },
          "500": {
            "description": "Unexpected error"
          }
        }
      },
      "post": {
        "summary": "Items",
        "description": "Create an Item",
        "tags": [
          "Items"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "formData",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Todo ok"
          },
          "500": {
            "description": "Unexpected error"
          }
        }
      }
    },
    "/send_mail": {
      "post": {
        "summary": "Send Mail",
        "tags": [
          "Mailer"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "email",
            "schema": {
              "$ref": "#/definitions/mail"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Mail enviado correctamente"
          },
          "401": {
            "description": "Error al enviar el mail"
          }
        }
      }
    }
  },
  "definitions": {
    "item": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "sell_price": {
          "type": "number"
        }
      }
    },
    "mail": {
      "type": "object",
      "properties": {
        "from": {
          "type": "string",
          "default": "juanluis.belda@gmail.com"
        },
        "to": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "text": {
          "type": "string"
        }
      }
    }
  }
}
